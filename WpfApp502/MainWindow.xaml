<Window x:Class="WpfApp502.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp502"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel >
                <TextBlock Margin="5 0 0 0 ">Введите ваш возраст:</TextBlock>
                <TextBox Name="visual_growth" Padding="5 "></TextBox>
                
                <TextBlock Margin="5 10 5 0 ">Введите ваш вес:</TextBlock>
                <TextBox Name="visual_weight" Padding="5" ></TextBox>
                
            </StackPanel>
            
            
            <StackPanel Orientation="Horizontal"  Margin="0 0 5 0 ">
                <Button Click="calculation_Onclick" Margin="0 0 5 0 " >Сделать расчёт</Button>
            </StackPanel>
            
            <StackPanel>
                    <TextBox Name="visual_answer" Padding="5" />
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
